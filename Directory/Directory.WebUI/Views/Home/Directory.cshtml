@model List<Person>


    <h3 class="text-center">Rehber</h3>
    <a class="btn btn-primary" style="float:right;" asp-controller="Home" asp-action="Created">Yeni Ekle</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Company</th>
                <th scope="col">Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].FirstName</td>
                    <td>@Model[i].LastName</td>
                    <td>@Model[i].PhoneNumber</td>
                    <td>@Model[i].Company</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit"  asp-route-id="@Model[i].ID"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Home" asp-action="Delete"  asp-route-id="@Model[i].ID"><i class="bi bi-x-circle"></i></a>
                    
                    </td>
                </tr>
            }

        </tbody>
    </table>