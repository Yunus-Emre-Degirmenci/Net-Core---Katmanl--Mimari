@model Person
<h4 class="text-center">Yeni Personel Ekleme</h4>

<form method="post" asp-controller="Home" asp-action="Created">
    <div class="row">
        <div class="col-md-3">
            <label class="form-label" asp-for="FirstName">İsim</label>
            <input class="form-control" type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-3">
            <label class="form-label" asp-for="LastName">Soyisim</label>
            <input class="form-control" type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-3">
            <label class="form-label" asp-for="PhoneNumber">Telefon</label>
            <input class="form-control" type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-3">
            <label class="form-label" asp-for="Company">Şirket</label>
            <input class="form-control" type="text" asp-for="Company" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
